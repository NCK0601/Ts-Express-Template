{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2016",
    "rootDir": "./",
    "outDir": "./dist",
    "strict": true,
    "pretty": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "inlineSourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false
  },
  "exclude": ["node_modules*", "public*"]
}
